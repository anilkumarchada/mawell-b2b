# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mawell_b2b?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_REFRESH_EXPIRES_IN="30d"

# Server
PORT=3001
NODE_ENV="development"
API_PREFIX="api/v1"

# File Storage (S3/MinIO)
AWS_ACCESS_KEY_ID="minioadmin"
AWS_SECRET_ACCESS_KEY="minioadmin"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="mawell-uploads"
AWS_S3_ENDPOINT="http://localhost:9000"
AWS_S3_FORCE_PATH_STYLE="true"

# SMS Provider (MSG91/Twilio)
SMS_PROVIDER="MSG91" # or TWILIO
MSG91_API_KEY="your-msg91-api-key"
MSG91_TEMPLATE_ID="your-msg91-template-id"
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Email
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@mawell.com"

# Razorpay
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"
RAZORPAY_WEBHOOK_SECRET="your-razorpay-webhook-secret"

# Google Maps
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Firebase Cloud Messaging
FCM_SERVER_KEY="your-fcm-server-key"
FCM_PROJECT_ID="your-firebase-project-id"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10
OTP_RATE_LIMIT=3
OTP_RATE_LIMIT_TTL=300

# Security
CORS_ORIGIN="http://localhost:3000,http://localhost:19006"
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Background Jobs
BULL_REDIS_URL="redis://localhost:6379"
JOB_CONCURRENCY=5

# Logging
LOG_LEVEL="debug"
LOG_FILE_ENABLED="true"
LOG_FILE_PATH="./logs"

# Health Check
HEALTH_CHECK_ENABLED="true"
HEALTH_CHECK_DATABASE="true"
HEALTH_CHECK_REDIS="true"

# Development
SWAGGER_ENABLED="true"
SWAGGER_PATH="docs"
DEBUG_MODE="true"

# Webhook URLs
WEBHOOK_BASE_URL="http://localhost:3001"

# Default Admin User (for seeding)
DEFAULT_ADMIN_PHONE="+919999999999"
DEFAULT_ADMIN_PASSWORD="admin123"

# Business Settings
DEFAULT_DELIVERY_FEE=50
DEFAULT_ETA_HOURS=24
DEFAULT_TAX_RATE=18
MIN_ORDER_AMOUNT=100
MAX_COD_AMOUNT=5000

# Location Settings
LOCATION_UPDATE_INTERVAL=30
GEOFENCE_RADIUS=100

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"
ALLOWED_DOCUMENT_TYPES="application/pdf,image/jpeg,image/png"